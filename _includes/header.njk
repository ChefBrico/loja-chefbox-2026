<header class="site-header">
    <div class="header-container">
        
        <!-- LOGO -->
        <a href="/" class="logo" aria-label="Gourmet Prático Home">
            <img src="{{ meta.organization.logo }}" alt="{{ meta.title }}">
        </a>

        <!-- MENU DE NAVEGAÇÃO -->
        <nav class="main-nav">
            <ul class="nav-list">
                {% for item in navigation %}
                    <li class="nav-item {% if item.children %}has-dropdown{% endif %}">
                        
                        <!-- Link Principal -->
                        <a href="{{ item.url }}" class="nav-link {% if item.type == 'cta' %}btn-cta-nav{% endif %}">
                            {{ item.text }}
                        </a>

                        <!-- Submenu (Dropdown) -->
                        {% if item.children %}
                        <ul class="dropdown-menu">
                            {% for child in item.children %}
                            <li>
                                <a href="{{ child.url }}">{{ child.text }}</a>
                            </li>
                            {% endfor %}
                        </ul>
                        {% endif %}

                    </li>
                {% endfor %}
            </ul>
        </nav>

        <!-- BOTÃO MOBILE (HAMBÚRGUER) -->
        <button class="mobile-menu-btn" aria-label="Abrir Menu">☰</button>
    </div>
</header>
