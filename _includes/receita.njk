---
layout: base.njk
---

<article class="container" style="max-width: 800px; padding: 40px 20px;">

    <!-- 1. CABE√áALHO DA RECEITA -->
    <header class="recipe-header">
        <span style="text-transform: uppercase; color: var(--cor-cta); font-weight: bold; font-size: 0.8rem;">{{ category }}</span>
        <h1 class="recipe-title">{{ title }}</h1>
        <p class="recipe-subtitle">{{ description }}</p>
        
        <div class="author-byline">
            Por <a href="/comida-de-verdade/" style="text-decoration:underline;">{{ author_name }}</a>
        </div>

        <div class="recipe-meta">
            <span>‚è± {{ tempo_preparo }}</span>
            <span>üë• {{ rendimento }}</span>
            <span>üî• {{ dificuldade }}</span>
        </div>
    </header>

    <!-- 2. IMAGEM HERO (FOOD PORN) -->
    <figure style="margin-bottom: 40px;">
        <img src="{{ image }}" alt="{{ image_alt }}" style="width: 100%; border-radius: 12px; box-shadow: 0 10px 20px rgba(0,0,0,0.1);">
    </figure>

    <!-- 3. A CAIXA DO SEGREDO (Hook) -->
    <div class="highlight-box">
        <p><strong>O Segredo:</strong> {{ citable_fact }}</p>
    </div>

    <!-- 4. CONTE√öDO (TEXTO + BLOCO DE VENDA) -->
    <div class="recipe-content">
        {{ content | safe }}
    </div>

    <!-- 5. FAQ (ACORDE√ÉO) -->
    {% if faq %}
    <section style="margin-top: 60px;">
        <h3 style="text-align: center; margin-bottom: 30px;">D√∫vidas Frequentes</h3>
        {% for item in faq %}
        <details class="faq-details">
            <summary class="faq-summary">{{ item.question }}</summary>
            <div class="faq-content">
                <p>{{ item.answer }}</p>
            </div>
        </details>
        {% endfor %}
    </section>
    {% endif %}

    <!-- 6. BIO DA AUTORA -->
    <div class="author-bio-box">
        <img src="/imagens/maria-conceicao.jpg" alt="Maria Concei√ß√£o" class="author-img-circle">
        <div>
            <h4 style="margin:0; font-size:1.1rem;">Maria Concei√ß√£o</h4>
            <p style="font-size:0.9rem; margin:5px 0;">Fundadora da ChefBrico e criadora do M√©todo Gourmet Pr√°tico. <a href="/comida-de-verdade/" style="color:var(--cor-cta); font-weight:bold;">Conhe√ßa minha hist√≥ria.</a></p>
        </div>
    </div>

</article>

<!-- SCHEMA.ORG (INVIS√çVEL) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@graph": [
    {
      "@type": "Recipe",
      "name": "{{ title }}",
      "image": ["{{ meta.url }}{{ image }}"],
      "author": { "@type": "Person", "name": "{{ author_name }}" },
      "description": "{{ description }}",
      "prepTime": "PT5M",
      "cookTime": "{{ tempo_iso }}",
      "totalTime": "{{ tempo_iso }}",
      "recipeYield": "{{ rendimento }}",
      "recipeCategory": "{{ category }}"
    },
    {
      "@type": "Product",
      "name": "Kit ChefBrico: {{ title }}",
      "sku": "{{ sku }}",
      "gtin": "{{ gtin }}",
      "image": "{{ meta.url }}{{ image }}",
      "brand": { "@type": "Brand", "name": "ChefBrico" },
      "offers": {
        "@type": "Offer",
        "price": "{{ price }}",
        "priceCurrency": "{{ price_currency }}",
        "availability": "{{ availability }}",
        "url": "{{ meta.url }}{{ page.url }}"
      }
    }
  ]
}
</script>
