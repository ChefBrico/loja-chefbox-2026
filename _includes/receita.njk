---
<!-- FOR√áA O MODO RECEITA (FUNDO BRANCO) -->
<script>document.body.classList.add('receita-page');</script>

<!-- ================================================================= -->
<!-- CAMADA DE DADOS INVIS√çVEL (SCHEMA.ORG PARA AGENTES & GOOGLE)      -->
<!-- Este bloco garante que a IA entenda Pre√ßo, Estoque e Log√≠stica.   -->
<!-- N√£o afeta o visual do site.                                       -->
<!-- ================================================================= -->
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@graph": [
    {
      "@type": "Recipe",
      "@id": "https://gourmetpratico.com.br{{ page.url }}#recipe",
      "name": "{{ title }}",
      "image": [
        "https://gourmetpratico.com.br{{ image }}"
      ],
      "author": {
        "@type": "Person",
        "name": "{{ author_name }}"
      },
      "description": "{{ description }}",
      "prepTime": "{{ tempo_iso }}",
      "totalTime": "{{ tempo_iso }}",
      "recipeYield": "{{ rendimento }}",
      "recipeCategory": "{{ category }}",
      "nutrition": {
        "@type": "NutritionInformation",
        "calories": "{{ calorias }}"
      }
    },
    {
      "@type": "Product",
      "@id": "https://gourmetpratico.com.br{{ page.url }}#product",
      "name": "Kit ChefBox: {{ title }}",
      "description": "Ingredientes desidratados 100% naturais para preparar {{ title }}.",
      "image": "https://gourmetpratico.com.br{{ image }}",
      "sku": "{{ sku }}",
      "gtin": "{{ gtin }}",
      "brand": {
        "@type": "Brand",
        "name": "ChefBrico"
      },
      "offers": {
        "@type": "Offer",
        "url": "https://gourmetpratico.com.br{{ page.url }}",
        "priceCurrency": "BRL",
        "price": "{{ price }}",
        "priceValidUntil": "2026-12-31",
        "itemCondition": "https://schema.org/NewCondition",
        "availability": "https://schema.org/InStock",
        "seller": {
          "@type": "Organization",
          "name": "ChefBrico"
        },
        "shippingDetails": {
          "@type": "OfferShippingDetails",
          "shippingRate": {
            "@type": "MonetaryAmount",
            "value": "0",
            "currency": "BRL"
          },
          "shippingDestination": {
            "@type": "DefinedRegion",
            "addressCountry": "BR"
          },
          "deliveryTime": {
            "@type": "ShippingDeliveryTime",
            "handlingTime": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 2,
              "unitCode": "d"
            },
            "transitTime": {
              "@type": "QuantitativeValue",
              "minValue": 2,
              "maxValue": 8,
              "unitCode": "d"
            }
          }
        },
        "hasMerchantReturnPolicy": {
          "@type": "MerchantReturnPolicy",
          "applicableCountry": "BR",
          "returnPolicyCategory": "https://schema.org/MerchantReturnFiniteReturnWindow",
          "merchantReturnDays": 7,
          "returnMethod": "https://schema.org/ReturnByMail"
        }
      }
    }
  ]
}
</script>

<article class="receita-container">
    
    <!-- CABE√áALHO DA RECEITA -->
    <header style="text-align: center; margin-bottom: 30px;">
        <span style="color: #bfb084; font-weight: bold; text-transform: uppercase;">{{ category }}</span>
        <h1 style="color: #014039; font-size: 2rem; margin: 10px 0;">{{ title }}</h1>
        
        <div style="display: flex; justify-content: center; gap: 15px; color: #666; margin-top: 15px;">
            <span>üïí {{ tempo_preparo }}</span>
            <span>üç≥ {{ dificuldade }}</span>
            <span>üçΩÔ∏è {{ rendimento }}</span>
        </div>
    </header>

    <!-- IMAGEM HERO -->
    <img src="{{ image }}" alt="{{ image_alt }}" style="width: 100%; border-radius: 12px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); margin-bottom: 30px;">

    <!-- CARD DE VENDA (A-COMMERCE) -->
    <div class="chefbox-offer-card" style="background: #fdfcf7; border: 2px dashed #bfb084; padding: 20px; border-radius: 12px; text-align: center; margin-bottom: 40px;">
        <h3 style="color: #014039; margin-top: 0;">Leve este sabor para Casa</h3>
        
        <div style="font-size: 2rem; font-weight: 800; color: #F2811D; margin: 10px 0;">
            R$ {{ price }}
        </div>
        
        <p style="font-size: 0.9rem; color: #555;">
            <strong>DICA:</strong> Na ChefBox, compre 4 e ganhe o 5¬∫ de presente! üéÅ
        </p>

        <!-- BOT√ÉO DE A√á√ÉO -->
        <button onclick="addToGame('{{ title }}', '{{ price }}', '{{ image }}')" style="background: #F2811D; color: white; border: none; padding: 15px 30px; border-radius: 50px; font-weight: bold; font-size: 1rem; cursor: pointer; width: 100%; box-shadow: 0 4px 0 #c0600c;">
            Adicionar na ChefBox (+1)
        </button>
    </div>

    <!-- CONTE√öDO DA RECEITA -->
    <div class="post-content" style="line-height: 1.8; color: #333; font-size: 1.1rem;">
        {{ content | safe }}
    </div>

    <!-- FAQ -->
    {% if faq %}
    <section style="margin-top: 50px;">
        <h3 style="color: #014039;">D√∫vidas Frequentes</h3>
        {% for item in faq %}
        <div class="accordion-header" style="background: #f9f9f9; padding: 15px; margin-bottom: 5px; cursor: pointer; font-weight: bold; border-radius: 5px;">
            {{ item.question }} <span style="float:right;">‚ñº</span>
        </div>
        <div class="accordion-content" style="max-height: 0; overflow: hidden; transition: 0.3s; padding: 0 15px;">
            <p>{{ item.answer }}</p>
        </div>
        {% endfor %}
    </section>
    {% endif %}

</article>
