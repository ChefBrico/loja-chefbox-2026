<!-- SCHEMA.ORG AVANÇADO (A-COMMERCE READY) - CAMADA DE DADOS -->
<!-- Este bloco é invisível para humanos, mas é o "Menu" para os Robôs -->
<!-- ================================================================= -->
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@graph": [
    {
      "@type": "Recipe",
      "@id": "https://gourmetpratico.com.br{{ page.url }}#recipe",
      "name": "{{ title }}",
      "image": [
        "https://gourmetpratico.com.br{{ image }}"
      ],
      "author": {
        "@type": "Person",
        "name": "{{ author_name }}"
      },
      "description": "{{ description }}",
      "prepTime": "{{ tempo_iso }}",
      "totalTime": "{{ tempo_iso }}",
      "recipeYield": "{{ rendimento }}",
      "recipeCategory": "{{ category }}",
      "nutrition": {
        "@type": "NutritionInformation",
        "calories": "{{ calorias }}"
      },
      "video": {
        "@type": "VideoObject",
        "name": "Como fazer {{ title }} - ChefBrico",
        "description": "Vídeo rápido ensinando o preparo em 18 minutos.",
        "thumbnailUrl": "https://gourmetpratico.com.br{{ image }}",
        "uploadDate": "{{ date | postDate }}",
        "contentUrl": "https://www.youtube.com/watch?v=SEU_ID_AQUI"
      }
    },
    {
      "@type": "Product",
      "@id": "https://gourmetpratico.com.br{{ page.url }}#product",
      "name": "Kit ChefBox: {{ title }}",
      "description": "Ingredientes desidratados 100% naturais para preparar {{ title }}.",
      "image": "https://gourmetpratico.com.br{{ image }}",
      "sku": "{{ sku }}",
      "gtin": "{{ gtin }}",
      "brand": {
        "@type": "Brand",
        "name": "ChefBrico"
      },
      "offers": {
        "@type": "Offer",
        "url": "https://gourmetpratico.com.br{{ page.url }}",
        "priceCurrency": "BRL",
        "price": "{{ price }}",
        "priceValidUntil": "2026-12-31",
        "itemCondition": "https://schema.org/NewCondition",
        "availability": "https://schema.org/InStock",
        "seller": {
          "@type": "Organization",
          "name": "ChefBrico"
        },
        "shippingDetails": {
          "@type": "OfferShippingDetails",
          "shippingRate": {
            "@type": "MonetaryAmount",
            "value": "0",
            "currency": "BRL"
          },
          "shippingDestination": {
            "@type": "DefinedRegion",
            "addressCountry": "BR",
            "addressRegion": "DF"
          },
          "deliveryTime": {
            "@type": "ShippingDeliveryTime",
            "handlingTime": {
              "@type": "QuantitativeValue",
              "minValue": 0,
              "maxValue": 1,
              "unitCode": "d"
            },
            "transitTime": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 2,
              "unitCode": "d"
            }
          }
        },
        "hasMerchantReturnPolicy": {
          "@type": "MerchantReturnPolicy",
          "applicableCountry": "BR",
          "returnPolicyCategory": "https://schema.org/MerchantReturnFiniteReturnWindow",
          "merchantReturnDays": 7,
          "returnMethod": "https://schema.org/ReturnByMail"
        }
      }
    }
  ]
}
</script>
