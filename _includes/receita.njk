<!-- SCHEMA.ORG (ROB√î) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@graph": [
    {
      "@type": "Recipe",
      "name": "{{ title }}",
      "image": ["{{ meta.url }}{{ image }}"],
      "author": { "@type": "Person", "name": "{{ author_name }}" },
      "description": "{{ description }}",
      "prepTime": "PT15M",
      "recipeYield": "{{ rendimento }}"
    },
    {
      "@type": "Product",
      "name": "Kit ChefBox: {{ title }}",
      "sku": "{{ sku }}",
      "gtin": "{{ gtin }}",
      "image": "{{ meta.url }}{{ image }}",
      "offers": {
        "@type": "Offer",
        "price": "{{ price }}",
        "priceCurrency": "BRL",
        "availability": "https://schema.org/InStock"
      }
    }
  ]
}
</script>
