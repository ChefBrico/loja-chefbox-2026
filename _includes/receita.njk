---
layout: base.njk
---

<!-- 1. ESTRUTURA VISUAL (O que o Humano v√™) -->
<article class="receita-container" itemscope itemtype="https://schema.org/Recipe">

    <!-- Cabe√ßalho da Receita -->
    <header class="receita-header text-center">
        <span class="badge-categoria">{{ page.fileSlug }}</span> <!-- Ex: risotos -->
        <h1 class="receita-title" itemprop="name">{{ title }}</h1>
        <p class="receita-subtitle">{{ description }}</p>
        
        <div class="receita-meta">
            <span>‚è± {{ tempo_preparo }}</span>
            <span>üë• Serve: {{ rendimento }}</span>
            <span>üî• {{ dificuldade }}</span>
        </div>
    </header>

    <!-- BLOCO DE VENDA (A-COMMERCE / CHEFBOX) -->
    <!-- Este √© o gatilho visual para a compra -->
    <div class="chefbox-cta-card">
        <div class="cta-info">
            <span class="cta-label">Prepare em casa em {{ tempo_preparo }}:</span>
            <div class="cta-price-group">
                {% if price_old %}
                <span class="price-old">R$ {{ price_old }}</span>
                {% endif %}
                <span class="price-current" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                    R$ <span itemprop="price">{{ price }}</span>
                    <meta itemprop="priceCurrency" content="{{ price_currency }}">
                </span>
            </div>
        </div>
        <!-- Bot√£o que leva para o WhatsApp ou Checkout -->
        <a href="https://wa.me/{{ meta.whatsapp }}?text=Ol√°, quero o kit {{ title }} (SKU: {{ sku }})" class="btn-comprar">
            MONTAR MINHA CAIXA üéÅ
        </a>
        <p class="estoque-aviso">Restam apenas {{ stock }} unidades do lote atual.</p>
    </div>

    <!-- Imagem Principal -->
    <figure class="receita-hero">
        <img src="{{ image }}" alt="{{ image_alt }}" itemprop="image">
        <figcaption>Foto: {{ image_alt }}</figcaption>
    </figure>

    <!-- Conte√∫do da Receita (Texto vindo do Markdown) -->
    <div class="receita-content e-content">
        {{ content | safe }}
    </div>

    <!-- FAQ Autom√°tica (Vem do Frontmatter) -->
    {% if faq %}
    <section class="faq-section">
        <h3>D√∫vidas Frequentes sobre este Prato</h3>
        <div class="faq-grid">
            {% for item in faq %}
            <details class="faq-item">
                <summary>{{ item.question }}</summary>
                <p>{{ item.answer }}</p>
            </details>
            {% endfor %}
        </div>
    </section>
    {% endif %}

    <!-- Assinatura de Autoridade (EEAT) -->
    <footer class="receita-footer">
        <div class="author-box">
            <p><strong>Chef {{ author_name }}</strong> explica:</p>
            <blockquote>"{{ citable_fact }}"</blockquote>
        </div>
    </footer>

</article>

<!-- 2. A M√ÅGICA DO ROB√î (Schema.org JSON-LD) -->
<!-- Isso √© invis√≠vel na tela, mas √© o que faz a Venda Zero-Click -->
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@graph": [
    {
      "@type": "Recipe",
      "name": "{{ title }}",
      "image": [
        "{{ meta.url }}{{ image }}"
      ],
      "author": {
        "@type": "Person",
        "name": "{{ author_name }}"
      },
      "datePublished": "{{ date | date('yyyy-MM-dd') }}",
      "description": "{{ description }}",
      "prepTime": "PT5M",
      "cookTime": "{{ tempo_iso }}", 
      "totalTime": "{{ tempo_iso }}",
      "keywords": "risoto, gourmet pr√°tico, chefbox, jantar r√°pido, {{ sku }}",
      "recipeYield": "{{ rendimento }}",
      "recipeCategory": "Prato Principal",
      "nutrition": {
        "@type": "NutritionInformation",
        "calories": "{{ calorias }}"
      },
      "isBasedOn": {
        "@type": "Product",
        "@id": "{{ meta.url }}{{ page.url }}#produto"
      }
    },
    {
      "@type": "Product",
      "@id": "{{ meta.url }}{{ page.url }}#produto",
      "name": "Kit ChefBox: {{ title }}",
      "image": "{{ meta.url }}{{ image }}",
      "description": "Todos os ingredientes medidos e pesados para preparar {{ title }} em casa.",
      "sku": "{{ sku }}",
      "brand": {
        "@type": "Brand",
        "name": "{{ meta.name }}"
      },
      "offers": {
        "@type": "Offer",
        "url": "{{ meta.url }}{{ page.url }}",
        "priceCurrency": "{{ price_currency }}",
        "price": "{{ price }}",
        "availability": "{{ availability }}",
        "itemCondition": "https://schema.org/NewCondition",
        
        /* --- ATUALIZA√á√ÉO CR√çTICA PARA GOOGLE MERCHANT CENTER --- */
        "hasMerchantReturnPolicy": {
          "@type": "MerchantReturnPolicy",
          "applicableCountry": "BR",
          "returnPolicyCategory": "https://schema.org/MerchantReturnFiniteReturnWindow",
          "merchantReturnDays": 7,
          "returnMethod": "https://schema.org/ReturnByMail",
          "returnFees": "https://schema.org/FreeReturn",
          "url": "{{ meta.url }}/politicas/trocas/"
        },
        
        "shippingDetails": {
          "@type": "OfferShippingDetails",
          "shippingRate": {
            "@type": "MonetaryAmount",
            "value": "0",
            "currency": "BRL"
          },
          "shippingDestination": {
            "@type": "DefinedRegion",
            "addressCountry": "BR"
          },
          "deliveryTime": {
            "@type": "ShippingDeliveryTime",
            "handlingTime": {
              "@type": "QuantitativeValue",
              "minValue": 0,
              "maxValue": 1,
              "unitCode": "DAY"
            },
            "transitTime": {
              "@type": "QuantitativeValue",
              "minValue": 1,
              "maxValue": 5,
              "unitCode": "DAY"
            }
          }
        }
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {% for item in faq %}
        {
          "@type": "Question",
          "name": "{{ item.question }}",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "{{ item.answer }}"
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
  ]
}
</script>
