---
layout: base.njk
---
<!-- For√ßa fundo branco -->
<script>document.body.classList.add('receita-page');</script>

<!-- SCHEMA.ORG (ROB√î) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": "Kit ChefBox: {{ title }}",
  "image": "https://gourmetpratico.com.br{{ image }}",
  "description": "Ingredientes 100% naturais para preparar {{ title }}.",
  "brand": { "@type": "Brand", "name": "ChefBrico" },
  "offers": {
    "@type": "Offer",
    "priceCurrency": "BRL",
    "price": "{{ price }}",
    "availability": "https://schema.org/InStock"
  }
}
</script>

<article class="receita-container">
    
    <!-- T√≠tulo e Categoria -->
    <header style="text-align: center; margin-bottom: 20px;">
        <span style="color: #bfb084; font-weight: bold; text-transform: uppercase; letter-spacing: 1px; font-size: 0.9rem;">{{ category }}</span>
        <h1 style="color: #014039; font-size: 2rem; margin: 10px 0;">{{ title }}</h1>
    </header>

    <!-- Imagem Principal -->
    <div class="article-hero-image-container">
        <img src="{{ image }}" alt="{{ title }}">
    </div>

    <!-- CARD DE VENDA (AQUI ESTAVA O ERRO DO PRE√áO E BOT√ÉO) -->
    <div class="chefbox-offer-card">
        <h3 style="color: #014039; margin-top: 0;">Leve este sabor para Casa</h3>
        
        <!-- Pre√ßo Corrigido com o Filtro -->
        <div style="font-size: 2.5rem; font-weight: 800; color: #F2811D; margin: 10px 0;">
            R$ {{ price | dinheiro }}
        </div>
        
        <p style="font-size: 0.9rem; color: #555; margin-bottom: 20px;">
            <strong>DICA:</strong> Na ChefBox, compre 4 e ganhe o 5¬∫ de presente! üéÅ
        </p>

        <!-- BOT√ÉO CORRIGIDO (Agora chama o Javascript) -->
        <button onclick="addToGame('{{ title }}', {{ price }}, '{{ image }}')" 
                class="btn-comprar" 
                style="width: 100%; cursor: pointer;">
            ADICIONAR NA CHEFBOX (+1)
        </button>
    </div>

    <!-- Conte√∫do do Texto -->
    <div class="post-content">
        {{ content | safe }}
    </div>

    <!-- FAQ -->
    {% if faq %}
    <section style="margin-top: 40px;">
        <h3 style="color: #014039;">D√∫vidas Frequentes</h3>
        {% for item in faq %}
        <div class="faq-item">
            <details>
                <summary>{{ item.question }}</summary>
                <p style="padding-top: 10px;">{{ item.answer }}</p>
            </details>
        </div>
        {% endfor %}
    </section>
    {% endif %}

</article>
