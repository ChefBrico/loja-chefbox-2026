<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {# 1. PÁGINAS MANUAIS IMPORTANTES #}
    <url>
        <loc>https://gourmetpratico.com.br/</loc>
        <changefreq>daily</changefreq>
        <priority>1.0</priority>
    </url>
    <url>
        <loc>https://gourmetpratico.com.br/chefbox/</loc>
        <changefreq>weekly</changefreq>
        <priority>0.9</priority>
    </url>
    <url>
        <loc>https://gourmetpratico.com.br/receitas/</loc>
        <changefreq>weekly</changefreq>
        <priority>0.9</priority>
    </url>

    {# 2. TODAS AS RECEITAS E PÁGINAS AUTOMÁTICAS #}
    {% for page in collections.all %}
    {% if not page.data.eleventyExcludeFromCollections and page.url %}
    <url>
        <loc>https://gourmetpratico.com.br{{ page.url | url }}</loc>
        <lastmod>{{ page.date.toISOString() }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    {% endif %}
    {% endfor %}
</urlset>
