<!-- SCHEMA DA COLEÇÃO -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "mainEntityOfPage": { "@id": "https://gourmetpratico.com.br/receitas/refeicoes-integrais/" },
  "name": "Refeições Integrais ChefBrico",
  "description": "Coleção de refeições completas e saudáveis.",
  "publisher": { "@id": "https://gourmetpratico.com.br/#organization" },
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "url": "https://gourmetpratico.com.br/receitas/refeicoes-integrais/baiao-de-dois/" },
      { "@type": "ListItem", "position": 2, "url": "https://gourmetpratico.com.br/receitas/refeicoes-integrais/mediterranea/" },
      { "@type": "ListItem", "position": 3, "url": "https://gourmetpratico.com.br/receitas/refeicoes-integrais/arroz-negro-funghi/" }
    ]
  }
}
</script>

<!-- ESTILO LOCAL -->
<style>
    .page-header-cat { text-align: center; margin: 40px 20px; }
    .page-header-cat h1 { color: #2c3e50; font-family: 'Merriweather', serif; }
    .page-header-cat p { color: #7f8c8d; max-width: 700px; margin: 0 auto; font-family: 'Lato', sans-serif; }
    
    .product-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 30px; max-width: 1200px; margin: 40px auto; padding: 0 20px; }
    
    .product-card { display: flex; flex-direction: column; border: 1px solid #eee; border-radius: 15px; overflow: hidden; background-color: white; box-shadow: 0 5px 15px rgba(0,0,0,0.03); transition: transform 0.3s; text-decoration: none; color: #333; }
    .product-card:hover { transform: translateY(-5px); box-shadow: 0 10px 25px rgba(0,0,0,0.1); }
    
    .product-card-image { width: 100%; height: 200px; object-fit: cover; }
    .product-card-content { padding: 20px; flex-grow: 1; display: flex; flex-direction: column; }
    .product-card-content h3 { margin: 0 0 10px; color: #27ae60; font-size: 1.2em; }
    .product-card-content span { font-size: 0.8em; text-transform: uppercase; color: #999; letter-spacing: 1px; }
    
    .cta-link { margin-top: auto; color: #27ae60; font-weight: bold; text-transform: uppercase; font-size: 0.9em; }
</style>

<main>
    <div class="page-header-cat">
        <h1>Refeições Integrais</h1>
        <p>Uma "Mãozinha na Rotina". Soluções completas, nutritivas e cheias de sabor para os dias corridos.</p>
    </div>
    
   <div class="recipe-grid">
    {% for item in collections.receitas %}
        <!-- FILTRO BLINDADO -->
        {% if item.data.category == "Refeição" or item.data.category == "Refeições" or item.data.category == "Refeições Integrais" %}
        
            {% set linkReal = item.filePathStem | replace("/content", "") + "/" %}

            <!-- CARD NOVO -->
            <div class="recipe-card">
                <div class="card-image-wrapper" style="height: 150px; overflow: hidden; position: relative;">
                    <a href="{{ linkReal }}">
                        <img src="{{ item.data.image }}" alt="{{ item.data.title }}" style="width: 100%; height: 100%; object-fit: cover;">
                    </a>
                    <button onclick="addToGame('{{ item.data.title }}', {{ item.data.price }}, '{{ item.data.image }}', '{{ item.data.sku }}')"
                            style="position: absolute; bottom: 10px; right: 10px; width: 35px; height: 35px; border-radius: 50%; background: #F2811D; color: white; border: none; font-size: 1.2rem; cursor: pointer; display: flex; align-items: center; justify-content: center; box-shadow: 0 2px 5px rgba(0,0,0,0.2);">
                        +
                    </button>
                </div>
                <div class="card-content">
                    <span style="font-size: 0.7rem; text-transform: uppercase; color: #999; letter-spacing: 1px;">{{ item.data.category }}</span>
                    <a href="{{ linkReal }}" style="text-decoration: none;">
                        <h3 style="font-size: 0.95rem; margin: 5px 0; color: #014039; line-height: 1.3;">{{ item.data.title }}</h3>
                    </a>
                    <div style="font-weight: 800; color: #F2811D; margin-top: auto;">R$ {{ item.data.price | dinheiro }}</div>
                </div>
            </div>
        
        {% endif %}
    {% endfor %}
</div>
</main>
