<!-- ESTILO VISUAL PADRONIZADO -->
<style>
    .categoria-header { text-align: center; padding: 60px 20px 40px; background: #f9f9f9; margin-bottom: 40px; }
    .categoria-header h1 { color: #014039; font-family: 'Merriweather', serif; font-size: 2.5rem; }
    .categoria-header p { color: #666; max-width: 600px; margin: 10px auto; font-size: 1.1rem; }

    /* GRID */
    .vitrine-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 30px;
        max-width: 1200px;
        margin: 0 auto 100px;
        padding: 0 20px;
    }

    /* CARD */
    .card-produto {
        border: 1px solid #eee;
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
        background: white;
        display: flex;
        flex-direction: column;
        position: relative;
    }
    .card-produto:hover { transform: translateY(-5px); box-shadow: 0 10px 25px rgba(0,0,0,0.1); border-color: #F2811D; }

    /* IMAGEM */
    .card-img-wrapper { position: relative; height: 200px; overflow: hidden; }
    .card-img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s; }
    .card-produto:hover .card-img { transform: scale(1.05); }

    /* BOTÃO FLUTUANTE */
    .btn-add-game {
        position: absolute;
        bottom: 10px; right: 10px;
        width: 40px; height: 40px;
        background-color: #F2811D; color: white;
        border-radius: 50%; border: none;
        font-size: 1.5rem; font-weight: bold;
        display: flex; align-items: center; justify-content: center;
        cursor: pointer;
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        z-index: 2;
        transition: transform 0.2s;
    }
    .btn-add-game:hover { transform: scale(1.1); background-color: #d35400; }

    /* CONTEÚDO */
    .card-content { padding: 20px; flex-grow: 1; display: flex; flex-direction: column; }
    .card-tag { font-size: 0.75rem; text-transform: uppercase; color: #999; letter-spacing: 1px; margin-bottom: 5px; }
    
    .card-title { 
        font-size: 1.1rem; color: #014039; margin: 0 0 10px; 
        font-weight: bold; text-decoration: none; line-height: 1.4;
    }
    
    .card-footer { 
        display: flex; justify-content: space-between; align-items: center; margin-top: auto; border-top: 1px solid #f5f5f5; padding-top: 15px; 
    }
    .card-price { color: #F2811D; font-weight: 800; font-size: 1.2rem; }
    .link-detalhes { color: #014039; font-size: 0.9rem; text-decoration: underline; cursor: pointer; }
</style>

<main>
    <div class="categoria-header">
        <h1>Refeições Integrais</h1>
        <p>Uma "Mãozinha na Rotina". Soluções completas, nutritivas e cheias de sabor para os dias corridos.</p>
    </div>

    <!-- GRADE DE PRODUTOS -->
    <div class="vitrine-grid">
        
       {% for item in collections.receitas %}
        
        {# FILTRO MESTRE: Só mostra se a categoria for REFEIÇÃO e tiver PREÇO #}
        {% if item.data.category == "Refeição" and item.data.price %}
        
        <div class="card-produto">
            <div class="card-img-wrapper">
                <a href="{{ item.url }}">
                    <img src="{{ item.data.image }}" alt="{{ item.data.title }}" class="card-img" loading="lazy">
                </a>
                
                <!-- BOTÃO GAMIFICADO (4+1) -->
                <button onclick="addToGame('{{ item.data.title }}', {{ item.data.price }}, '{{ item.data.image }}', '{{ item.data.sku }}', '{{ item.url }}')"
                        class="btn-add-game" title="Adicionar à ChefBox">
                    +
                </button>
            </div>

            <div class="card-content">
                <span class="card-tag">⏱️ {{ item.data.tempo_preparo }}</span>

                <a href="{{ item.url }}" class="card-title">
                    {{ item.data.title | replace(" | ChefBrico", "") }}
                </a>
                
                <div class="card-footer">
                    <span class="card-price">R$ {{ item.data.price | dinheiro }}</span>
                    <a href="{{ item.url }}" class="link-detalhes">Ver Detalhes</a>
                </div>
            </div>
        </div>
        
        {% endif %}
       {% endfor %}

    </div>
</main>
