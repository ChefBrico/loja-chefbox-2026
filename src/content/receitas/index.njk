        <div style="font-weight: bold; color: var(--cor-institucional, #014039); margin-bottom: 10px; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 1px;">
            üéØ NAVEGUE POR SOLU√á√ÉO
        </div>
        <div style="display: flex; flex-wrap: wrap; gap: 5px; justify-content: center;">
            <a href="/receitas/solucoes/jantar-rapido/" class="btn-filter-pill">‚ö° Jantar R√°pido</a>
            <a href="/receitas/solucoes/marmita-saudavel/" class="btn-filter-pill">üç± Marmita Fit</a>
            <a href="/receitas/solucoes/momento-a-dois/" class="btn-filter-pill">üç∑ Jantar a Dois</a>
            <a href="/receitas/solucoes/para-criancas/" class="btn-filter-pill">üë∂ Para Crian√ßas</a>
            <a href="/receitas/solucoes/trilha-viagem/" class="btn-filter-pill">üéí Trilha & Viagem</a>
        </div>
    </div>

    <!-- 2. FILTROS POR CATEGORIA (JAVASCRIPT) -->
    <!-- Filtra a grade abaixo sem recarregar -->
    <div class="filter-section text-center" style="margin-bottom: 30px;">
        <div style="font-weight: bold; color: var(--cor-institucional, #014039); margin-bottom: 10px; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 1px;">
            üç≤ NAVEGUE POR CATEGORIA
        </div>
        <div style="display: flex; flex-wrap: wrap; gap: 5px; justify-content: center;">
             <button class="btn-filter-pill active" onclick="filter('all')">Todos</button>
             <button class="btn-filter-pill" onclick="filter('Risoto')">Risotos</button>
             <button class="btn-filter-pill" onclick="filter('Sopa')">Sopas</button>
             <button class="btn-filter-pill" onclick="filter('Refei√ß√£o')">Refei√ß√µes</button>
             <button class="btn-filter-pill" onclick="filter('Emp√≥rio')">Emp√≥rio</button>
        </div>
    </div>
    
    <!-- VITRINE (GRID 2x6) -->
    <div class="recipe-grid">
        
        {% for item in collections.receitas %}
        {% if item.data.price %}
        
        <div class="recipe-card" 
             data-category="{{ item.data.category }}" 
