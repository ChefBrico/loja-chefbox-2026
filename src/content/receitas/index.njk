---

<style>
    .war-catalog-container { max-width: 1200px; margin: 0 auto; padding: 0 20px; text-align: center; }
    .recipe-grid { display: grid; gap: 15px; width: 100%; margin: 40px auto 100px; grid-template-columns: repeat(2, 1fr); }
    @media (min-width: 1024px) { .recipe-grid { grid-template-columns: repeat(6, 1fr); gap: 20px; } }
    
    .recipe-card { background: white; border: 1px solid #eee; border-radius: 12px; overflow: hidden; display: flex; flex-direction: column; box-shadow: 0 2px 8px rgba(0,0,0,0.06); height: 100%; transition: transform 0.2s; text-align: center; }
    .recipe-card:hover { transform: translateY(-3px); border-color: #F2811D; }
    .card-image-wrapper { position: relative; width: 100%; padding-top: 75%; }
    .card-image-wrapper img { position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; }
    .btn-card-float { position: absolute; bottom: 8px; right: 8px; width: 35px; height: 35px; background-color: #F2811D; color: white; border-radius: 50%; border: none; font-size: 1.4rem; display: flex; align-items: center; justify-content: center; cursor: pointer; }
    
    .card-content { padding: 12px; flex-grow: 1; display: flex; flex-direction: column; align-items: center; }
    .card-title { font-size: 0.85rem; color: #014039; margin: 5px 0 10px; font-weight: 700; text-decoration: none; line-height: 1.3; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
    .card-price { color: #F2811D; font-weight: 800; font-size: 1rem; }

    .filter-section { margin-bottom: 40px; }
    .filter-label { font-weight: 800; color: #014039; margin-bottom: 15px; text-transform: uppercase; font-size: 0.75rem; letter-spacing: 2px; }
    .btn-filter-pill { background: white; border: 1px solid #eee; padding: 8px 18px; border-radius: 20px; cursor: pointer; color: #555; font-size: 0.85rem; transition: 0.2s; margin: 4px; display: inline-block; }
    
    /* ESTADO ATIVO: O bot√£o "acende" aqui */
    .btn-filter-pill.active { background: #014039 !important; color: white !important; border-color: #014039 !important; }
</style>

<main class="war-catalog-container">
    <header style="margin: 60px 0 40px;">
        <h1 style="font-size: 2.5rem; color: #014039; font-family: 'Playfair Display', serif;">Cat√°logo Inteligente</h1>
        <p style="color: #666; margin-top: 10px;">Comida de verdade pronta em 18 minutos. Sem desperd√≠cio.</p>
    </header>

    <div class="filter-section">
        <div class="filter-label">üéØ Navegue por Solu√ß√£o</div>
        <div style="display: flex; flex-wrap: wrap; gap: 8px; justify-content: center;">
            <a href="/receitas/solucoes/jantar-rapido/" class="btn-filter-pill">‚ö° Jantar R√°pido</a>
            <a href="/receitas/solucoes/marmita-fit/" class="btn-filter-pill">üç± Marmita Fit</a>
            <a href="/receitas/solucoes/momento-a-dois/" class="btn-filter-pill">üç∑ Jantar a Dois</a>
            <a href="/receitas/solucoes/para-criancas/" class="btn-filter-pill">üë∂ Para Crian√ßas</a>
            <a href="/receitas/solucoes/trilha-viagem/" class="btn-filter-pill">üéí Trilha & Viagem</a>
        </div>
    </div>

    <div class="filter-section">
        <div class="filter-label">üç≤ Categorias</div>
        <div style="display: flex; flex-wrap: wrap; gap: 8px; justify-content: center;">
             <button id="cat-all" class="btn-filter-pill active" onclick="filter('all')">Todos</button>
             <button id="cat-Risoto" class="btn-filter-pill" onclick="filter('Risoto')">Risotos</button>
             <button id="cat-Sopa" class="btn-filter-pill" onclick="filter('Sopa')">Sopas</button>
             <button id="cat-Refei√ß√£o" class="btn-filter-pill" onclick="filter('Refei√ß√£o')">Refei√ß√µes</button>
             <button id="cat-Emp√≥rio" class="btn-filter-pill" onclick="filter('Emp√≥rio')">Emp√≥rio</button>
        </div>
    </div>
    
    <div class="recipe-grid" id="main-grid">
        {% for item in collections.receitas %}
        {% if item.data.price %}
        <div class="recipe-card" data-category="{{ item.data.category }}">
            <div class="card-image-wrapper">
                <a href="{{ item.url }}"><img src="{{ item.data.image }}" alt="{{ item.data.title }}" loading="lazy"></a>
                <button id="prod-{{ item.data.sku }}" onclick="addToGame('{{ item.data.title }}', {{ item.data.price }}, '{{ item.data.image }}', '{{ item.data.sku }}')" class="btn-card-float">+</button>
            </div>
            <div class="card-content">
                <a href="{{ item.url }}" class="card-title">{{ item.data.title | replace(" | ChefBrico", "") }}</a>
                <div style="margin-top: auto;">
                    <span class="card-price">R$ {{ item.data.price | dinheiro }}</span>
                </div>
            </div>
        </div>
        {% endif %}
        {% endfor %}
    </div>
</main>

<script>
function filter(category) {
    const cards = document.querySelectorAll('.recipe-card');
    const buttons = document.querySelectorAll('.filter-section:nth-child(2) .btn-filter-pill');
    
    // 1. Remove classe ativa de todos os bot√µes de categoria
    buttons.forEach(btn => btn.classList.remove('active'));
    
    // 2. Adiciona classe ativa apenas ao bot√£o clicado
    const selectedBtn = document.getElementById('cat-' + category);
    if (selectedBtn) { selectedBtn.classList.add('active'); }

    // 3. Filtra os cards
    cards.forEach(card => {
        const cardCat = card.getAttribute('data-category');
        if (category === 'all' || cardCat === category) {
            card.style.display = 'flex';
        } else {
            card.style.display = 'none';
        }
    });
}
</script>
