    }

    /* --- GRID RESPONSIVO (A M√°gica 2x6) --- */
    .recipe-grid {
        display: grid;
        gap: 15px;
        width: 100%;
        margin: 40px auto 100px;
        grid-template-columns: repeat(2, 1fr); /* Mobile: 2 colunas */
    }

    @media (min-width: 1024px) {
        .recipe-grid {
            grid-template-columns: repeat(6, 1fr); /* Desktop: 6 colunas */
