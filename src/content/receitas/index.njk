<!-- SCHEMA.ORG -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Cat√°logo Inteligente ChefBrico",
  "url": "https://gourmetpratico.com.br/receitas/",
  "isPartOf": {
    "@type": "Store",
    "@id": "https://gourmetpratico.com.br/#website", 
    "name": "ChefBrico Gourmet Pr√°tico",
    "image": "https://gourmetpratico.com.br/imagens/logo.png"
  },
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": [
      {% for item in collections.receitas %}
