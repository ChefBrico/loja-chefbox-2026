        background: var(--cor-institucional);
        color: white;
        border-color: var(--cor-institucional);
    }
</style>

<!-- SCRIPT DE FILTRO -->
<script>
function filter(tag) {
    const cards = document.querySelectorAll('.recipe-card');
    const btns = document.querySelectorAll('.btn-filter');
    
    // Atualiza bot√µes
    btns.forEach(b => {
        if(b.innerText.toLowerCase().includes(tag.toLowerCase()) || b.getAttribute('onclick').includes(tag)) {
            b.classList.add('active');
        } else {
            b.classList.remove('active');
        }
    });

    // Filtra cards
    cards.forEach(card => {
        const tags = card.getAttribute('data-tags').toLowerCase();
        const busca = tag.toLowerCase();

        if (tag === 'all' || tags.includes(busca)) {
            card.style.display = 'flex';
        } else {
            card.style.display = 'none';
        }
    });
}
</script>
