<!-- L√ìGICA DE FILTRO (Mantida simples e funcional) -->
<script>
function filter(category) {
    const cards = document.querySelectorAll('.recipe-card');
    const buttons = document.querySelectorAll('.btn-filter-pill'); // Atualizado para classe certa
    
    // 1. Atualiza visual dos bot√µes
    buttons.forEach(btn => {
        // L√≥gica para n√£o conflitar com os links de solu√ß√£o
        if (btn.tagName === 'BUTTON') {
            if (btn.innerText.includes(category) || (category === 'all' && btn.innerText === 'Ver Tudo')) {
                btn.classList.add('active');
            } else {
                btn.classList.remove('active');
            }
        }
    });

    // 2. Filtra os cards
    cards.forEach(card => {
        const cardCat = card.getAttribute('data-category');
        
        if (category === 'all' || cardCat === category) {
            card.style.display = 'flex'; 
        } else {
            card.style.display = 'none'; 
        }
    });
}
</script>
