    .card-price { color: #F2811D; font-weight: 800; font-size: 1rem; }

    /* --- BOT√ïES DE FILTRO --- */
    .btn-filter-pill {
        background: white; border: 1px solid #eee; padding: 8px 18px;
        border-radius: 20px; cursor: pointer; color: #555; font-size: 0.85rem;
