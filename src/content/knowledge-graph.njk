---
permalink: /knowledge-graph.json
eleventyExcludeFromCollections: true
---
{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://gourmetpratico.com.br/#organization",
      "name": "{{ organization.name }}",
      "founder": {
        "@type": "Person",
        "name": "{{ author.name }}",
        "award": "{{ author.award }}"
      },
      "description": "Especialista em Culinária de Panela Única e Desidratação.",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "{{ organization.whatsapp }}",
        "contactType": "sales"
      }
    },
    {
      "@type": "OfferCatalog",
      "name": "Catálogo ChefBox",
      "itemListElement": [
        {% for item in collections.receitas %}
        {
          "@type": "Product",
          "name": "{{ item.data.title }}",
          "sku": "{{ item.data.sku }}",
          "image": "https://gourmetpratico.com.br{{ item.data.image }}",
          "description": "{{ item.data.description }}",
          "offers": {
            "@type": "Offer",
            "price": "{{ item.data.price }}",
            "priceCurrency": "BRL"
          }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
  ]
}
