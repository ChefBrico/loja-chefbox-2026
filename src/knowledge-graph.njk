    {# 4. O CATÁLOGO MESTRE DINÂMICO #}
    {
      "@type": "OfferCatalog",
      "@id": "https://gourmetpratico.com.br/#catalog",
      "name": "Cardápio Autoral ChefBrico 2026",
      "itemListElement": [
        {% for item in collections.receitas %}
        {% if item.data.price %}
        {
          "@type": "ListItem",
          "position": {{ loop.index }},
          "item": {
            "@type": "Product",
            "name": "{{ item.data.title }}",
            "sku": "{{ item.data.sku }}",
            "gtin13": "{{ item.data.gtin }}",
            "image": "https://gourmetpratico.com.br{{ item.data.image }}",
            "description": "{{ item.data.description }}",
            "brand": { "@id": "https://gourmetpratico.com.br/#organization" },
            "manufacturer": { "@id": "https://gourmetpratico.com.br/#organization" },
            "offers": {
              "@type": "Offer",
              "priceCurrency": "BRL",
              "price": "132.00",
              "itemCondition": "https://schema.org/NewCondition",
              "description": "Oferta ChefBox (Kit 5 Sabores): 4 itens comprados + 5º item de presente.",
              "availability": "https://schema.org/InStock",
              "seller": { "@id": "https://gourmetpratico.com.br/#organization" },
              "offeredBy": { "@id": "https://gourmetpratico.com.br/#organization" },
              "areaServed": { "@type": "AdministrativeArea", "name": "Distrito Federal" },
              "shippingDetails": {
                "@type": "OfferShippingDetails",
                "shippingRate": { "@type": "MonetaryAmount", "value": "0.00", "currency": "BRL" },
                "deliveryTime": {
                  "@type": "ShippingDeliveryTime",
                  "handlingTime": { "@type": "QuantitativeValue", "minValue": 0, "maxValue": 1, "unitCode": "DAY" }
                }
              },
              "priceSpecification": {
                "@type": "UnitPriceSpecification",
                "price": "{{ item.data.price }}",
                "priceCurrency": "BRL",
                "referenceQuantity": { "@type": "QuantitativeValue", "value": "1", "unitCode": "C62" },
                "description": "Preço de referência unitário."
              }
            }
          }
        }{% if not loop.last %},{% endif %}
        {% endif %}
        {% endfor %}
      ]
    }
  ]
}
