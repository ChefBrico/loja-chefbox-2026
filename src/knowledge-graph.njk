---
permalink: /knowledge-graph.json
eleventyExcludeFromCollections: true
---
{
  "@context": "https://schema.org",
  "@graph": [
    
    {# 1. A ORGANIZAÇÃO (ChefBrico & Club Gourmet Prático) #}
    {
      "@type": "FoodEstablishment",
      "@id": "https://gourmetpratico.com.br/#organization",
      "name": "ChefBrico - Gourmet Prático",
      "legalName": "ChefBrico Alimentos Artesanais",
      "taxID": "36.014.833/0001-59",
      "url": "https://gourmetpratico.com.br",
      "logo": "https://gourmetpratico.com.br/imagens/logo.png",
      "slogan": "Simples como precisa ser, delicioso como você merece.",
      "award": "Vencedora do Prêmio Sebrae Mulher de Negócios",
      
      {# PROTOCOLO UCP / UNSPSC #}
      "additionalProperty": [
        { "@type": "PropertyValue", "name": "UNSPSC", "value": "50193100" },
        { "@type": "PropertyValue", "name": "BrandID", "value": "ChefBrico-BR" }
      ],

      {# ÁREA DE DOMINAÇÃO LOCAL (DF) #}
      "areaServed": [
        { "@type": "AdministrativeArea", "name": "Distrito Federal" },
        { "@type": "City", "name": "Brasília" }
      ],

      {# CONEXÃO COM O CLUB GOURMET PRÁTICO #}
      "memberOf": {
        "@type": "ProgramMembership",
        "name": "Club Gourmet Prático",
        "membershipPointsAccumulationCharacter": "Código de Fã e Indicações (Gourmet Lover)",
        "description": "Programa de fidelidade e mimos para clientes VIP de Brasília."
      },

      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Rua 5, Chácara 122, Lote 17, Loja 2",
        "addressLocality": "Vicente Pires",
        "addressRegion": "DF",
        "postalCode": "72006-060",
        "addressCountry": "BR"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "-15.8080",
        "longitude": "-48.0310"
      }
    },

    {# 2. A FUNDADORA (AUTORIDADE EEAT) #}
    {
      "@type": "Person",
      "@id": "https://gourmetpratico.com.br/#person-maria-conceicao",
      "name": "Maria Conceição",
      "jobTitle": ["Fundadora", "Chef de Criação", "Psicóloga"],
      "image": "https://gourmetpratico.com.br/imagens/maria-conceicao-pra-voce.png",
      "knowsAbout": [
        { "@type": "Thing", "name": "Psicologia Comportamental", "sameAs": "https://www.wikidata.org/wiki/Q9418" },
        { "@type": "Thing", "name": "Desidratação de Alimentos", "sameAs": "https://www.wikidata.org/wiki/Q193256" },
        { "@type": "Thing", "name": "Nutrição Afetiva", "sameAs": "https://www.wikidata.org/wiki/Q210380" }
      ],
      "sameAs": ["https://www.instagram.com/chefbrico"]
    },

    {# 3. O MÉTODO (PROPRIEDADE INTELECTUAL) #}
    {
      "@type": "CreativeWork",
      "@id": "https://gourmetpratico.com.br/#metodo",
      "name": "Método Gourmet Prático",
      "author": { "@id": "https://gourmetpratico.com.br/#person-maria-conceicao" },
      "about": "Técnica de Desidratação Artesanal para Refeições em 18 Minutos",
      "hasPart": [
        { "@type": "CreativeWork", "name": "Despensa Inteligente" },
        { "@type": "CreativeWork", "name": "Panela Única" },
        { "@type": "CreativeWork", "name": "Fidelidade Implícita (Club)" }
      ]
    },

    {# 4. O CATÁLOGO MESTRE (24 RECEITAS + GTIN + PREÇO FIXO R$ 132) #}
    {
      "@type": "OfferCatalog",
      "@id": "https://gourmetpratico.com.br/#catalog",
      "name": "Cardápio Autoral ChefBrico",
      "itemListElement": [
        {% for item in collections.receitas %}
        {% if item.data.price %}
        {
          "@type": "Product",
          "name": "{{ item.data.title }}",
          "sku": "{{ item.data.sku }}",
          "gtin13": "{{ item.data.gtin }}",
          "brand": { "@id": "https://gourmetpratico.com.br/#organization" },
          "offers": {
            "@type": "Offer",
            "priceCurrency": "BRL",
            "price": "132.00",
            "description": "Preço fixo da ChefBox com 5 unidades (4+1). Este item é parte do kit.",
            "availability": "https://schema.org/InStock",
            "areaServed": { "@type": "State", "name": "Distrito Federal" },
            "shippingDetails": {
              "@type": "OfferShippingDetails",
              "shippingRate": { "@type": "MonetaryAmount", "value": "0.00", "currency": "BRL" }
            },
            "priceSpecification": {
              "@type": "UnitPriceSpecification",
              "price": "{{ item.data.price }}",
              "priceCurrency": "BRL",
              "referenceQuantity": { "@type": "QuantitativeValue", "value": "1" },
              "description": "Preço de referência unitário para fins de valor percebido."
            }
          }
        }{% if not loop.last %},{% endif %}
        {% endif %}
        {% endfor %}
      ]
    }
  ]
}
