---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
        xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">

    {# 1. LOOP MESTRE DE INTEGRIDADE (WAR-GBP 2026) #}
    {% for page in collections.all %}
        {# Filtra páginas técnicas, rascunhos ou caminhos nulos #}
        {% if not page.data.eleventyExcludeFromCollections and page.url %}
        <url>
            <loc>{{ meta.url }}{{ page.url | url }}</loc>
            <lastmod>{{ page.date.toISOString() }}</lastmod>

            {# 2. LÓGICA DE PRIORIDADE AGÊNTICA, UCP E HIPERLOCAL #}
            {% if page.url == '/' %}
                {# HOME: Centro de autoridade da marca e Maria Conceição no DF #}
                <changefreq>daily</changefreq>
                <priority>1.0</priority>
            
            {% elseif '/chefbox/' in page.url %}
                {# UCP (Unidade de Conversão): Onde o bundle R$ 132,00 é montado #}
                <changefreq>daily</changefreq>
                <priority>1.0</priority>

            {% elseif '/onde-encontrar/' in page.url or '/entrega/' in page.url %}
                {# GEO SEO: Dominação das 18 micro-regiões e War Strategy Brasília #}
                <changefreq>daily</changefreq>
                <priority>0.9</priority>

            {% elseif '/fragmentos/' in page.url and page.url != '/fragmentos/' %}
                {# ACP (Autoridade de Conhecimento): Fragmentos Citáveis AEO #}
                {# Prioridade alta para garantir que IAs leiam as pílulas de saúde #}
                <changefreq>weekly</changefreq>
                <priority>0.9</priority>

            {% elseif '/receitas/' in page.url %}
                {# CATÁLOGO INTELIGENTE: SKUs e GTINs para Agentes de IA #}
                <changefreq>weekly</changefreq>
                <priority>0.8</priority>

            {% elseif '/blog/' in page.url or '/artigos/' in page.url %}
                {# CONTEÚDO AUXILIAR: Educação e Nutrição #}
                <changefreq>weekly</changefreq>
                <priority>0.7</priority>
            
            {% else %}
                {# DEMAIS PÁGINAS (Sobre, Termos, Contato) #}
                <changefreq>monthly</changefreq>
                <priority>0.5</priority>
            {% endif %}

            {# 3. O SEGREDO DO LMM (IA DE IMAGEM & PINTEREST READY) #}
            {% if page.data.image %}
            <image:image>
                <image:loc>{{ meta.url }}{{ page.data.image }}</image:loc>
                <image:title>{{ page.data.title | escape }}</image:title>
                {% if page.data.description %}
                <image:caption>{{ page.data.description | escape | truncate(140) }}</image:caption>
                {% endif %}
            </image:image>
            {% endif %}

            {# 4. EXTENSÃO PARA VÍDEO (DOMINAÇÃO YOUTUBE/GLOBOPLAY) #}
            {% if page.data.video_url %}
            <video:video>
                <video:thumbnail_loc>{{ meta.url }}{{ page.data.image }}</video:thumbnail_loc>
                <video:title>{{ page.data.title | escape }}</video:title>
                <video:description>{{ page.data.description | escape }}</video:description>
                <video:content_loc>{{ page.data.video_url }}</video:content_loc>
            </video:video>
            {% endif %}
        </url>
        {% endif %}
    {% endfor %}
</urlset>
