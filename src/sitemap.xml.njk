---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">

    {# 1. LOOP MESTRE DE INTEGRIDADE #}
    {% for page in collections.all %}
        {# Filtra páginas técnicas, rascunhos ou caminhos nulos #}
        {% if not page.data.eleventyExcludeFromCollections and page.url %}
        <url>
            <loc>{{ meta.url }}{{ page.url | url }}</loc>
            <lastmod>{{ page.date.toISOString() }}</lastmod>

            {# 2. LÓGICA DE PRIORIDADE AGÊNTICA E HIPERLOCAL 2026 #}
            {% if page.url == '/' %}
                {# HOME: Centro de autoridade da marca no DF #}
                <changefreq>daily</changefreq>
                <priority>1.0</priority>
            
            {% elseif '/chefbox/' in page.url or '/clube/' in page.url %}
                {# ÁREAS DE CONVERSÃO: Onde o lucro acontece (R$ 132,00) #}
                <changefreq>daily</changefreq>
                <priority>1.0</priority>

            {% elseif '/receitas/' in page.url or '/sabores/' in page.url %}
                {# PRODUTOS: Cada sabor é uma entidade SEO/GEO #}
                <changefreq>weekly</changefreq>
                <priority>0.9</priority>

            {% elseif '/entrega/' in page.url or '/brasilia/' in page.url %}
                {# GEO SEO: Páginas específicas de bairros do DF #}
                <changefreq>weekly</changefreq>
                <priority>0.9</priority>

            {% elseif '/fragmentos/' in page.url or '/blog/' in page.url or '/artigos/' in page.url %}
                {# CONTEÚDO AEO: Educação sobre o Método e Saúde #}
                <changefreq>weekly</changefreq>
                <priority>0.8</priority>
            
            {% else %}
                {# DEMAIS PÁGINAS (FAQ, Sobre, Contato) #}
                <changefreq>monthly</changefreq>
                <priority>0.6</priority>
            {% endif %}

            {# 3. O SEGREDO DO LMM (IA DE IMAGEM & PINTEREST READY) #}
            {% if page.data.image %}
            <image:image>
                <image:loc>{{ meta.url }}{{ page.data.image }}</image:loc>
                <image:title>{{ page.data.title | escape }}</image:title>
                {% if page.data.description %}
                <image:caption>{{ page.data.description | escape | truncate(140) }}</image:caption>
                {% endif %}
            </image:image>
            {% endif %}
        </url>
        {% endif %}
    {% endfor %}
</urlset>
