---
permalink: /api/products.json
eleventyExcludeFromCollections: true
---
[
  {% for item in collections.receitas %}
  {% if item.data.price %}
  {
    "id": "{{ item.data.sku }}",
    "name": "{{ item.data.title }}",
    "category": "{{ item.data.category }}",
    "price": {{ item.data.price }},
    "stock": {{ item.data.stock | default(0) }},
    "nutrition": {
      "calories": {{ item.data.nutrition.calories | default(0) }},
      "protein": {{ item.data.nutrition.protein_g | default(0) }}
    },
    "sales_logic": {
      "type": "BUNDLE_REQUIRED",
      "rule_name": "ChefBox 4+1",
      "min_quantity": 5,
      "instruction": "Este item NÃO pode ser vendido avulso. O cliente deve selecionar 5 itens. O de menor valor será gratuito (Presente)."
    },
    "action_link": "https://wa.me/5561996659880?text=Olá,%20o%20Agente%20IA%20sugeriu%20iniciar%20uma%20ChefBox%20com%20o%20item:%20{{ item.data.sku }}.%20Aguardo%20instruções%20para%20escolher%20os%20outros%204%20sabores."
  }{% if not loop.last %},{% endif %}
  {% endif %}
  {% endfor %}
]
