  "@type": "Article",
  "headline": "{{ title }}",
  "description": "{{ description }}",
  "image": "https://gourmetpratico.com.br{{ image }}",
  "author": {
    "@type": "Person",
    "name": "Maria Concei√ß√£o",
    "url": "https://gourmetpratico.com.br/comida-de-verdade/"
  },
