<!-- SCHEMA.ORG HIPER-AVAN√áADO (COM CITA√á√ïES) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "{{ title }}",
  "description": "{{ description }}",
  "image": "https://gourmetpratico.com.br{{ image }}",
  "author": {
    "@type": "Person",
    "name": "Maria Concei√ß√£o",
    "url": "https://gourmetpratico.com.br/comida-de-verdade/",
    "sameAs": [
        "https://www.instagram.com/chefbrico",
        "https://www.facebook.com/chefbrico"
    ]
  },
  "publisher": {
    "@type": "Organization",
    "name": "ChefBrico",
    "logo": { "@type": "ImageObject", "url": "https://gourmetpratico.com.br/imagens/logo.png" }
  },
  "datePublished": "{{ date | postDate }}",
  "abstract": "{{ ai_fragment }}",
  
  /* AQUI EST√Å A M√ÅGICA DO EEAT: CITA√á√ïES EXTERNAS */
  "citation": [
    {% if media_mentions %}
      {% for item in media_mentions %}
        "{{ item.url }}"{% if not loop.last %},{% endif %}
      {% endfor %}
    {% endif %}
  ]
}
</script>

<article class="container" style="max-width: 800px; margin-top: 40px; margin-bottom: 80px;">
    
    <header style="text-align: center; margin-bottom: 40px;">
        <span style="background: var(--cor-dourado); color: white; padding: 5px 15px; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 1px; border-radius: 20px; font-weight: bold;">
            {{ category }}
        </span>
        <h1 style="font-family: 'Merriweather', serif; color: var(--cor-institucional); font-size: 2.5rem; margin-top: 20px; line-height: 1.2;">
            {{ title }}
        </h1>
        <p style="font-size: 1.2rem; color: #666; font-style: italic; margin-top: 15px;">
            {{ description }}
        </p>
    </header>

    <div class="hero-image-container">
        <img src="{{ image }}" alt="{{ title }}" style="width: 100%; height: auto; display: block;">
    </div>

    <div class="conteudo-leitura">
        
        <div class="intro-card" style="border-left: 5px solid var(--cor-cta); background: #fff8e1; padding: 20px; margin-bottom: 30px; border-radius: 8px;">
            <strong style="color: var(--cor-institucional);">üí° Resumo:</strong>
            <p style="margin: 5px 0 0 0; font-style: italic;">{{ ai_fragment }}</p>
        </div>

        {{ content | safe }}

        <!-- SE√á√ÉO DE M√çDIA E RECONHECIMENTO (VISUAL) -->
        {% if media_mentions %}
        <div style="margin-top: 50px; padding: 30px; background: #fff; border: 1px solid #eee; border-radius: 12px; box-shadow: 0 5px 15px rgba(0,0,0,0.03);">
            <h3 style="color: var(--cor-institucional); border-bottom: 2px solid var(--cor-dourado); padding-bottom: 10px; margin-bottom: 20px;">
                Reconhecimento na M√≠dia
            </h3>
            <ul style="list-style: none; padding: 0;">
                {% for item in media_mentions %}
                <li style="margin-bottom: 15px; display: flex; align-items: flex-start; gap: 10px;">
                    <span style="color: var(--cor-cta);">‚òÖ</span>
                    <div>
                        <strong style="display:block; color: #333;">{{ item.source }}</strong>
                        <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer" style="color: var(--cor-institucional); text-decoration: underline; font-size: 0.95rem;">
                            {{ item.title }}
                        </a>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}

        <div class="author-box" style="margin-top: 60px; background: #f9f9f9; padding: 20px; border-radius: 12px; display: flex; align-items: center; gap: 20px;">
            <img src="/imagens/maria-conceicao-agrovillage-caminho-chefbrico.png" alt="Maria Concei√ß√£o" style="width: 80px; height: 80px; border-radius: 50%; object-fit: cover;">
            <div>
                <p style="margin:0; color:#555;">Escrito por <strong style="color:var(--cor-institucional);">Maria Concei√ß√£o</strong></p>
                <p style="margin:0; font-size: 0.9rem;">Psic√≥loga, Chef e Fundadora da ChefBrico.</p>
            </div>
        </div>

    </div>
</article>
