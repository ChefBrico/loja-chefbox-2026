---
layout: base.njk
---

<!-- SCHEMA.ORG (Mantido) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "{{ title }}",
  "description": "{{ description }}",
  "image": "https://gourmetpratico.com.br{{ image }}",
  "author": {
    "@type": "Person",
    "name": "Maria Conceição",
    "url": "https://gourmetpratico.com.br/comida-de-verdade/"
  },
  "publisher": {
    "@type": "Organization",
    "name": "ChefBrico",
    "logo": { "@type": "ImageObject", "url": "https://gourmetpratico.com.br/imagens/logo.png" }
  },
  "datePublished": "{{ date | postDate }}",
  "abstract": "{{ ai_fragment }}"
}
</script>

<style>
    /* --- 1. HERO SECTION (Ajustada para não encavalar) --- */
    .editorial-header {
        background-color: var(--cor-institucional, #014039);
        color: white;
        /* Aumentei o padding-bottom para 160px. Isso dá espaço para o texto respirar */
        padding: 60px 20px 160px; 
        text-align: center;
        position: relative;
    }

    /* Categoria: Limpa, Branca, Sem fundo dourado */
    .editorial-category {
        color: rgba(255, 255, 255, 0.9); /* Branco levemente suave */
        font-family: 'Lato', sans-serif;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 3px; /* Espaçamento chique */
        font-weight: 600;
        display: block; /* Garante linha própria */
        margin-bottom: 20px;
        border-bottom: 1px solid rgba(255,255,255,0.2); /* Linha fina sutil */
        display: inline-block;
        padding-bottom: 5px;
    }

    .editorial-title {
        font-family: 'Merriweather', serif;
        font-size: 3.2rem;
        line-height: 1.1;
        max-width: 900px;
        margin: 0 auto 25px;
        color: white;
    }

    .editorial-subtitle {
        font-size: 1.3rem;
        opacity: 0.9;
        font-weight: 300;
        max-width: 700px;
        margin: 0 auto;
        font-style: italic;
        line-height: 1.5;
    }

    /* --- 2. O CARD FLUTUANTE --- */
    .editorial-body {
        max-width: 800px;
        /* Sobe 100px para cima do verde. Como o verde tem 160px de sobra, não encavala */
        margin: -100px auto 60px; 
        background: white;
        padding: 0 60px 60px; /* Padding top zerado, quem empurra é a imagem */
        border-radius: 8px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        position: relative;
        z-index: 10;
    }

    /* A Imagem Circular (Posicionamento Matemático) */
    .author-circle-hero {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        border: 8px solid white; /* Borda mais grossa para destacar */
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        /* Margem negativa de -90px (metade da altura) para ficar 50/50 */
        margin: -90px auto 50px; 
        overflow: hidden;
        background: #fff;
        position: relative;
        z-index: 20;
    }
    .author-circle-hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Tipografia do Texto */
    .pro-text {
        font-family: 'Lato', sans-serif;
        font-size: 1.15rem;
        line-height: 1.9;
        color: #2c3e50;
    }
    
    /* Letra Capitular */
    .pro-text > p:first-of-type::first-letter {
        font-family: 'Merriweather', serif;
        font-size: 3.5rem;
        float: left;
        line-height: 0.8;
        margin-right: 10px;
        margin-top: 5px;
        color: var(--cor-institucional, #014039);
        font-weight: bold;
    }

    .pro-text h2 {
        font-family: 'Merriweather', serif;
        color: var(--cor-institucional, #014039);
        font-size: 1.8rem;
        margin-top: 60px;
        margin-bottom: 25px;
        text-align: center;
    }
    
    .pro-text h2::after {
        content: "";
        display: block;
        width: 40px;
        height: 2px;
        background: var(--cor-dourado, #bfb084);
        margin: 20px auto 0;
    }

    .pro-text h3 {
        color: var(--cor-cta, #F2811D);
        font-size: 1.3rem;
        margin-top: 40px;
        font-weight: bold;
    }

    /* Box de IA */
    .ai-box {
        background: #fdfbf7;
        border: 1px solid #eee;
        border-left: 4px solid var(--cor-institucional, #014039);
        padding: 20px;
        font-size: 0.95rem;
        color: #555;
        margin-bottom: 50px;
        font-style: italic;
        border-radius: 4px;
    }

    /* Grid de Mídia */
    .media-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 60px;
        border-top: 1px solid #eee;
        padding-top: 40px;
    }
    .media-card {
        background: #fff;
        padding: 15px;
        border: 1px solid #eee;
        border-radius: 8px;
        text-align: center;
        transition: 0.2s;
    }
    .media-card:hover { border-color: var(--cor-dourado, #bfb084); transform: translateY(-2px); }
    .media-source { font-weight: bold; color: var(--cor-institucional, #014039); display: block; margin-bottom: 5px; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 1px; }
    .media-link { color: #555; font-size: 0.9rem; text-decoration: none; line-height: 1.3; display: block; }

    /* Mobile */
    @media (max-width: 768px) {
        .editorial-header { padding: 40px 20px 120px; }
        .editorial-title { font-size: 2.2rem; }
        .editorial-body { padding: 0 25px 40px; margin-top: -80px; }
        .author-circle-hero { width: 140px; height: 140px; margin: -70px auto 40px; border-width: 5px; }
    }
</style>

<article>
    
    <!-- 1. HERO (Fundo Verde + Texto Branco) -->
    <header class="editorial-header">
        <!-- Categoria Limpa (Sem fundo dourado) -->
        <span class="editorial-category">{{ category }}</span>
        <h1 class="editorial-title">{{ title }}</h1>
        <p class="editorial-subtitle">{{ description }}</p>
    </header>

    <!-- 2. CORPO FLUTUANTE -->
    <div class="editorial-body">
        
        <!-- A Imagem Circular (Centralizada e Equilibrada) -->
        <div class="author-circle-hero">
            <img src="{{ image }}" alt="{{ title }}">
        </div>

        <!-- Resumo Técnico (IA) -->
        <div class="ai-box">
            <strong>Resumo do Método:</strong> {{ ai_fragment }}
        </div>

        <!-- Texto Diagramado -->
        <div class="pro-text">
            {{ content | safe }}
        </div>

        <!-- 3. RECONHECIMENTO NA MÍDIA -->
        {% if media_mentions %}
        <div class="media-grid">
            <div style="grid-column: 1 / -1; text-align: center; margin-bottom: 10px;">
                <h4 style="color: #999; text-transform: uppercase; letter-spacing: 2px; font-size: 0.75rem;">Reconhecimento & Mídia</h4>
            </div>
            {% for item in media_mentions %}
            <div class="media-card">
                <span class="media-source">{{ item.source }}</span>
                <a href="{{ item.url }}" target="_blank" class="media-link">{{ item.title }}</a>
            </div>
            {% endfor %}
        </div>
        {% endif %}

        <!-- 4. ASSINATURA FINAL -->
        <div style="margin-top: 80px; text-align: center;">
            <img src="/imagens/logo.png" alt="ChefBrico" style="width: 80px; opacity: 0.8; margin-bottom: 15px;">
            <p style="font-family: 'Dancing Script', cursive; font-size: 1.8rem; color: var(--cor-institucional, #014039);">
                Com carinho, Maria Conceição.
            </p>
        </div>

    </div>

</article>
