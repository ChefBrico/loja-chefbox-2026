---
layout: base.njk
---

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://gourmetpratico.com.br{{ page.url }}"
  },
  "headline": "{{ title }}",
  "description": "{{ description }}",
  "image": {
    "@type": "ImageObject",
    "url": "https://gourmetpratico.com.br{{ image }}",
    "height": 800,
    "width": 800
  },
  "author": {
    "@type": "Person",
    "name": "Maria Conceição",
    "@id": "https://gourmetpratico.com.br/#person-maria-conceicao"
  },
  "publisher": {
    "@type": "Organization",
    "name": "ChefBrico",
    "logo": {
      "@type": "ImageObject",
      "url": "https://gourmetpratico.com.br/imagens/logo.png"
    },
    "@id": "https://gourmetpratico.com.br/#organization"
  },
  "datePublished": "{{ date | postDate }}",
  "dateModified": "{{ date | postDate }}",
  "speakable": {
    "@type": "SpeakableSpecification",
    "cssSelector": [".ai-box", ".editorial-subtitle"]
  },
  "citation": [
    {% if media_mentions %}
    {% for item in media_mentions %}
    {
      "@type": "CreativeWork",
      "name": "{{ item.source }}",
      "headline": "{{ item.title }}",
      "url": "{{ item.url }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
    {% endif %}
  ]
}
</script>

<style>
    /* --- ENGENHARIA VISUAL APPLE (ARTIGOS) --- */
    .article-magazine-wrapper {
        background-color: #FFFFFF !important;
        padding-bottom: 100px;
    }

    /* 1. HEADER EDITORIAL (TOTAL WHITE) */
    .editorial-header {
        padding: 80px 20px 40px;
        text-align: center;
        max-width: 900px;
        margin: 0 auto;
    }

    .editorial-category {
        color: #F2811D; /* Laranja Persuasivo */
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 3px;
        font-weight: 800;
        margin-bottom: 20px;
        display: inline-block;
        border-bottom: 2px solid #FDFBF7;
    }

    .editorial-title {
        font-family: 'Merriweather', serif;
        font-size: 3rem;
        line-height: 1.1;
        color: #014039; /* Verde ChefBrico */
        margin: 20px 0;
    }

    .editorial-subtitle {
        font-size: 1.25rem;
        color: #666;
        font-weight: 300;
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.5;
        font-style: italic;
    }

    /* 2. CÍRCULO DE PROTEÇÃO (CONSISTÊNCIA) */
    .author-circle-hero {
        width: 180px; height: 180px;
        border-radius: 50% !important;
        overflow: hidden;
        border: 6px solid #FDFBF7;
        box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        margin: 40px auto;
    }
    .author-circle-hero img { width: 100%; height: 100%; object-fit: cover; }

    /* 3. CORPO DO TEXTO (CREAM BOX PARA IA) */
    .editorial-body {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .ai-box {
        background: #FDFBF7 !important; /* Cream Highlight */
        border-radius: 20px;
        padding: 30px;
        font-size: 1rem;
        color: #444;
        margin-bottom: 50px;
        border: 1px solid rgba(1, 64, 57, 0.05);
        font-style: italic;
        line-height: 1.6;
    }

    .pro-text {
        font-size: 1.15rem;
        line-height: 1.9;
        color: #333;
    }

    /* Capitular Apple Style */
    .pro-text > p:first-of-type::first-letter {
        font-family: 'Merriweather', serif;
        font-size: 4rem;
        float: left;
        line-height: 0.8;
        margin-right: 12px;
        color: #014039;
        font-weight: 900;
    }

    /* 4. GRID DE MÍDIA (EEAT) */
    .media-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        margin-top: 60px;
        padding: 40px;
        background: #FDFBF7;
        border-radius: 30px;
    }
    .media-card {
        background: #FFFFFF;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.02);
        transition: transform 0.3s;
        text-align: center;
    }
    .media-card:hover { transform: translateY(-5px); }

    /* Mobile Adjusts */
    @media (max-width: 768px) {
        .editorial-title { font-size: 2.2rem; }
        .author-circle-hero { width: 150px; height: 150px; }
        .pro-text { font-size: 1.05rem; }
    }
</style>

<article class="article-magazine-wrapper">
    
    <header class="editorial-header">
        <span class="editorial-category">{{ category }}</span>
        <h1 class="editorial-title">{{ title }}</h1>
        <p class="editorial-subtitle">{{ description }}</p>
        
        <div class="author-circle-hero">
            <img src="{{ image }}" alt="Maria Conceição - ChefBrico">
        </div>
    </header>

    <div class="editorial-body">
        
        <div class="ai-box">
            <strong style="color: #014039; display: block; margin-bottom: 10px; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 1px;">Resumo do Método:</strong>
            {{ ai_fragment }}
        </div>

        <div class="pro-text">
            {{ content | safe }}
        </div>

        {% if media_mentions %}
        <section class="media-grid">
            <div style="grid-column: 1 / -1; text-align: center; margin-bottom: 20px;">
                <h4 style="color: #014039; text-transform: uppercase; letter-spacing: 2px; font-size: 0.8rem; font-weight: 800;">Reconhecimento & Mídia</h4>
            </div>
            {% for item in media_mentions %}
            <div class="media-card">
                <span style="font-weight: 800; color: #F2811D; font-size: 0.7rem; text-transform: uppercase;">{{ item.source }}</span>
                <a href="{{ item.url }}" target="_blank" style="color: #014039; text-decoration: none; font-weight: 600; display: block; margin-top: 10px; font-size: 0.95rem;">{{ item.title }}</a>
            </div>
            {% endfor %}
        </section>
        {% endif %}

        <footer style="margin-top: 80px; text-align: center; border-top: 1px solid #eee; padding-top: 40px;">
            <p style="font-family: 'Dancing Script', cursive; font-size: 2.2rem; color: #014039;">
                Com carinho, Maria Conceição.
            </p>
            <img src="/imagens/logo.png" alt="ChefBrico" style="width: 100px; opacity: 0.8; margin-top: 20px;">
        </footer>
    </div>

</article>
