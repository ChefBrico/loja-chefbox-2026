  .btn-gamer-compact { pointer-events: auto; background: rgba(242, 129, 29, 0.95); backdrop-filter: blur(10px); color: white; border: 1px solid rgba(255, 255, 255, 0.4); padding: 10px 22px; font-size: 0.8rem; border-radius: 50px; font-weight: 900; box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3); cursor: pointer; text-transform: uppercase; }
  .link-retorno-clean { pointer-events: auto; font-size: 0.7rem; padding: 5px 12px; color: #014039; font-weight: 800; text-decoration: none; background: rgba(255, 255, 255, 0.95); border-radius: 15px; border: 1px solid #ddd; text-transform: uppercase; }

  @media (max-width: 768px) {
    .hero-image-container { max-width: 90% !important; }
  }
</style>

