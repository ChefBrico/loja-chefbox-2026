<!-- 1. O SCHEMA HIPER-AVAN√áADO (C√âREBRO DO ROB√î) -->
<!-- Conecta: Receita + Produto + Autora (Global) + FAQ (Local) -->
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "Recipe",
  "name": "{{ title }}",
  "image": "https://gourmetpratico.com.br{{ image }}",
  "description": "{{ description }}",
  "sku": "{{ sku }}",
  
  "author": {
    "@type": "Person",
    "name": "{{ author.name }}",
    "url": "{{ author.url }}",
    "jobTitle": "{{ author.jobTitle }}"
  },
  
  "prepTime": "{{ tempo_iso }}",
  "recipeYield": "{{ rendimento }}",
  "nutrition": { 
      "@type": "NutritionInformation", 
      "calories": "{{ calorias }}" 
  },
  "recipeIngredient": [ "Ver lista completa na embalagem ChefBrico" ], 
  
  "offers": {
    "@type": "Offer",
    "price": "{{ price }}",
    "priceCurrency": "BRL",
    "url": "https://gourmetpratico.com.br{{ page.url }}",
    "availability": "https://schema.org/InStock",
    "seller": {
      "@type": "Organization",
      "name": "ChefBrico"
    }
  },

  "mainEntity": {
    "@type": "FAQPage",
    "mainEntity": [
      {% for item in faq %}
      {
        "@type": "Question",
        "name": "{{ item.question }}",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "{{ item.answer }}"
        }
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ]
  }
}
</script>

<!-- 2. O ESTILO "REVISTA PREMIADA" (A ROUPA DO SITE) -->
<style>
  /* Hero e T√≠tulos */
  .receita-header { text-align: center; max-width: 800px; margin: 40px auto; }
  .receita-title { color: #014039; font-size: 2.5rem; font-family: 'Merriweather', serif; margin-bottom: 10px; line-height: 1.2; }
  .receita-subtitle { color: #666; font-style: italic; font-size: 1.1rem; }
  
