</article>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const contentDiv = document.querySelector('.conteudo-leitura');
        const headers = contentDiv.querySelectorAll('h2');
        const simplesTag = document.getElementById('simples-assim-tag');
        
        headers.forEach(h2 => {
            const title = h2.innerText.toLowerCase();
            const list = h2.nextElementSibling;
            if (list) {
                if (title.includes('amar') || title.includes('pacote')) list.classList.add('checked-list');
                if (title.includes('preparo')) {
                    list.classList.add('modo-preparo');
                    if (simplesTag) { simplesTag.style.display = 'block'; list.after(simplesTag); }
                }
                if (title.includes('criativa') || title.includes('dica')) list.classList.add('dica-chef-card');
            }
        });
    });
</script>
