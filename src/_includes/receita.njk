  .faq-question { width: 100%; text-align: left; padding: 15px 0; background: none; border: none; display: flex; justify-content: space-between; color: #014039; font-weight: 700; cursor: pointer; font-size: 1rem; }
  .faq-answer { max-height: 0; overflow: hidden; transition: max-height 0.3s ease; font-size: 0.95rem; color: #666; }
