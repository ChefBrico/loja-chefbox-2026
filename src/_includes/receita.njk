  "name": "{{ title }}",
  "description": "{{ description }}",
  "sku": "{{ sku }}",
  "gtin13": "{{ gtin }}",
  "image": {
    "@type": "ImageObject",
    "url": "https://gourmetpratico.com.br{{ image }}",
    "height": 566,
    "width": 1080
  },
  
  "brand": { "@type": "Brand", "name": "ChefBrico" },
  
  "author": {
    "@type": "Person",
    "name": "{{ author.name | default('Maria Concei√ß√£o') }}",
    "url": "https://gourmetpratico.com.br/comida-de-verdade/"
  },

  "datePublished": "{{ date | postDate }}",
  "prepTime": "{{ tempo_iso }}",
  "cookTime": "{{ tempo_iso }}",
  "totalTime": "{{ tempo_iso }}",
  "recipeYield": "{{ rendimento }}",
  "recipeCategory": "{{ category }}",
  "recipeCuisine": "Italian",

  // FILTROS DE DIETA
  "suitableForDiet": [
    {% if diets %}
      {% for diet in diets %}"{{ diet }}"{% if not loop.last %},{% endif %}{% endfor %}
    {% else %}
      "https://schema.org/VegetarianDiet",
      "https://schema.org/VeganDiet"
    {% endif %}
  ],

  // SOCIAL PROOF (Simulado ou Real)
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "{{ rating.value | default('4.9') }}",
    "reviewCount": "{{ rating.count | default('120') }}",
    "bestRating": "5",
    "worstRating": "1"
  },

  // NUTRI√á√ÉO (Para Rob√¥s)
  {% if nutrition %}
  "nutrition": {
    "@type": "NutritionInformation",
    "calories": "{{ nutrition.calories }} calories",
    "proteinContent": "{{ nutrition.protein_g }} g",
    "carbohydrateContent": "{{ nutrition.carbs_g }} g",
    "fiberContent": "{{ nutrition.fiber_g }} g",
    "fatContent": "{{ nutrition.fats_g }} g",
    "sodiumContent": "{{ nutrition.sodium_mg }} mg"
  },
  {% endif %}

  "recipeIngredient": [ "Ver lista completa na embalagem ChefBrico" ], 

  // INSTRU√á√ïES PASSO A PASSO (Para Assistentes de Voz)
  "recipeInstructions": [
    {% if instructions %}
      {% for step in instructions %}
      {
        "@type": "HowToStep",
        "name": "{{ step.name }}",
        "text": "{{ step.text }}",
        "position": {{ loop.index }},
        "url": "https://gourmetpratico.com.br{{ page.url }}#passo{{ loop.index }}"
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    {% else %}
      {
        "@type": "HowToStep",
        "text": "Siga as instru√ß√µes de preparo no r√≥tulo ou na descri√ß√£o abaixo."
      }
    {% endif %}
  ],
  
  // OFERTA COMERCIAL (A L√ìGICA 4+1)
  "offers": {
    "@type": "Offer",
    "price": "{{ price }}",
    "priceCurrency": "BRL",
    "url": "https://gourmetpratico.com.br{{ page.url }}",
    "availability": "{% if stock > 0 %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}",
    "inventoryLevel": {
      "@type": "QuantitativeValue",
      "value": "{{ stock }}"
    },
    "seller": { "@type": "Organization", "name": "ChefBrico" },
    
    "priceSpecification": [
      {
        "@type": "UnitPriceSpecification",
        "price": "{{ price }}",
        "priceCurrency": "BRL",
        "referenceQuantity": { "@type": "QuantitativeValue", "value": "1", "unitCode": "C62" }
      },
      {
        "@type": "UnitPriceSpecification",
        "price": "{{ price * 0.8 }}", 
        "priceCurrency": "BRL",
        "referenceQuantity": { "@type": "QuantitativeValue", "value": "5", "unitCode": "C62" },
        "description": "Pre√ßo unit√°rio ao comprar o Pack ChefBox (Leve 5, Pague 4)"
      }
    ]
  },

  // FAQ INTEGRADO
  "mainEntity": {
    "@type": "FAQPage",
    "mainEntity": [
      {% for item in faq %}
      {
        "@type": "Question",
        "name": "{{ item.question }}",
        "acceptedAnswer": { "@type": "Answer", "text": "{{ item.answer }}" }
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    ]
  }
}
</script>

