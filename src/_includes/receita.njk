<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": ["Product", "Recipe"],
  "name": "{{ title }}",
  "description": "{{ description }}",
  "sku": "{{ sku }}",
  "image": "https://gourmetpratico.com.br{{ image }}",
