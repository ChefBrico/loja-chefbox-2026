      text-align: center;
  }
  .pilar-card { padding: 20px; background: #fff; border: 1px solid #eee; border-radius: 10px; transition: transform 0.2s; }
  .pilar-card:hover { transform: translateY(-5px); box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
  
  /* Transforma√ß√£o da Lista Num√©rica em Bolinhas Verdes */
  .modo-preparo ol { list-style: none; counter-reset: steps; padding: 0; }
  .modo-preparo li { position: relative; padding-left: 50px; margin-bottom: 25px; }
  .modo-preparo li::before {
      counter-increment: steps;
      content: counter(steps);
      position: absolute;
      left: 0; top: 0;
      width: 35px; height: 35px;
      background: #014039;
      color: white;
      border-radius: 50%;
      text-align: center;
      line-height: 35px;
      font-weight: bold;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
  }
  
  /* CTA de Compra (Sedu√ß√£o) */
  .cta-box {
      background: linear-gradient(135deg, #fdfbf7 0%, #fff 100%);
      border: 1px solid #e0e0e0;
      border-radius: 20px;
      padding: 30px;
      text-align: center;
      margin: 50px auto;
      max-width: 600px;
  }
  .btn-comprar-agora {
      background: #F2811D;
      color: white;
      padding: 15px 40px;
      border-radius: 50px;
      font-weight: bold;
      text-decoration: none;
      font-size: 1.2rem;
      display: inline-block;
      margin-top: 15px;
      box-shadow: 0 4px 15px rgba(242, 129, 29, 0.4);
      transition: transform 0.2s;
  }
  .btn-comprar-agora:hover { transform: scale(1.05); }

  /* FAQ Accordion */
  details.faq-item { background: #f9f9f9; margin-bottom: 10px; border-radius: 8px; overflow: hidden; border: 1px solid #eee; }
  details.faq-item summary { padding: 15px; cursor: pointer; font-weight: bold; color: #014039; list-style: none; display: flex; justify-content: space-between; align-items: center; }
  details.faq-item summary::after { content: '+'; font-size: 1.5rem; color: #F2811D; }
  details.faq-item[open] summary::after { content: '-'; }
  .faq-answer { padding: 15px; border-top: 1px solid #eee; background: white; color: #555; }

  /* Author Box (Autoridade EEAT) */
  .author-box {
      display: flex; 
      align-items: center; 
      gap: 20px; 
      background: #fdfbf7; 
      padding: 25px; 
      border-radius: 15px; 
      margin-top: 60px; 
      border: 1px solid #eaddcf;
  }
  .author-img {
      width: 80px; 
      height: 80px; 
      border-radius: 50%; 
      object-fit: cover; 
      border: 3px solid white; 
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }
  .author-text { margin: 0; font-size: 0.95rem; line-height: 1.5; color: #444; }
  .author-link { color: #F2811D; text-decoration: none; font-weight: bold; font-size: 0.85rem; }

  /* Responsivo Mobile */
  @media (max-width: 600px) {
      .receita-title { font-size: 1.8rem; }
      .meta-bar { gap: 15px; font-size: 0.8rem; }
      .author-box { flex-direction: column; text-align: center; }
  }
</style>

