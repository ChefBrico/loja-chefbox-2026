<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": ["Product", "Recipe"],
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://gourmetpratico.com.br{{ page.url }}"
  },
  
  "name": "{{ title }}",
  "description": "{{ description }}",
  "sku": "{{ sku }}",
  "gtin13": "{{ gtin }}",
  "image": {
    "@type": "ImageObject",
    "url": "https://gourmetpratico.com.br{{ image }}",
    "height": 566,
    "width": 1080
  },
  "brand": { 
    "@type": "Brand", 
    "name": "ChefBrico",
    "@id": "https://gourmetpratico.com.br/#organization"
  },
  
  {% if wikidata_id %}
  "isBasedOn": "https://www.wikidata.org/wiki/{{ wikidata_id }}",
  {% endif %}
  "keywords": "{{ category }}, Culin√°ria Saud√°vel, {{ main_ingredient }}",

  "additionalProperty": [
    { "@type": "PropertyValue", "name": "UNSPSC", "value": "{{ unspsc | default('50193100') }}" },
    { "@type": "PropertyValue", "name": "Peso L√≠quido", "value": "{{ peso_liquido_g }}g" },
    { "@type": "PropertyValue", "name": "Rendimento", "value": "{{ rendimento }}" }
  ],

  "author": { 
    "@type": "Person", 
    "name": "{{ author_name }}",
    "@id": "https://gourmetpratico.com.br/#person-maria-conceicao"
  },
  "datePublished": "{{ date | postDate }}",
  "prepTime": "{{ tempo_iso }}",
  "cookTime": "{{ tempo_iso }}",
  "totalTime": "{{ tempo_iso }}",
  "recipeYield": "{{ rendimento }}",
  "recipeCategory": "{{ category }}",
  "recipeIngredient": [ "{{ ingredientes_texto }}" ],
  "recipeInstructions": [
    {% if instructions %}
      {% for step in instructions %}
      {
        "@type": "HowToStep",
        "name": "{{ step.name }}",
        "text": "{{ step.text }}",
        "position": {{ loop.index }}
      }{% if not loop.last %},{% endif %}
      {% endfor %}
    {% endif %}
  ],
  "nutrition": {
    "@type": "NutritionInformation",
    "calories": "{{ nutrition.calories }} calories",
    "proteinContent": "{{ nutrition.protein_g }} g",
    "carbohydrateContent": "{{ nutrition.carbs_g }} g",
    "fatContent": "{{ nutrition.fats_g }} g",
    "fiberContent": "{{ nutrition.fiber_g }} g",
    "sodiumContent": "{{ nutrition.sodium_mg }} mg",
    "servingSize": "{{ nutrition.portion }}"
  },

  "offers": {
    "@type": "Offer",
    "price": "{{ price }}",
    "priceCurrency": "BRL",
    "url": "https://gourmetpratico.com.br{{ page.url }}",
    "availability": "{% if stock > 0 %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}",
    "itemCondition": "https://schema.org/NewCondition",
    "seller": { "@id": "https://gourmetpratico.com.br/#organization" },
    "areaServed": { "@type": "State", "name": "Distrito Federal" },
    
    "priceSpecification": [
      {
        "@type": "UnitPriceSpecification",
        "price": "{{ price }}",
        "priceCurrency": "BRL",
        "referenceQuantity": { "@type": "QuantitativeValue", "value": "1", "unitCode": "C62" },
        "description": "Pre√ßo unit√°rio base."
      },
      {
        "@type": "UnitPriceSpecification",
        "price": "0.00",
        "priceCurrency": "BRL",
        "referenceQuantity": { "@type": "QuantitativeValue", "value": "1", "unitCode": "C62" },
        "eligibleQuantity": {
          "@type": "QuantitativeValue",
          "value": "5",
          "unitCode": "C62"
        },
        "description": "Na compra de 5 unidades, o 5¬∫ item √© 100% gratuito (Presente)."
      }
    ],
    "disambiguatingDescription": "Oferta ChefBox: Monte um kit com 5 sabores. Voc√™ paga 4 e ganha o 5¬∫ de presente. Frete Gr√°tis para DF."
  },

  "aggregateRating": {
