<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "NewsArticle",
  "headline": "{{ title }}",
  "image": [
    "https://gourmetpratico.com.br{{ image }}"
  ],
  "datePublished": "{{ date | postDate }}",
  "dateModified": "{{ date | postDate }}",
  "author": {
    "@type": "Person",
    "name": "Maria Concei√ß√£o",
    "url": "https://gourmetpratico.com.br/comida-de-verdade/"
  },
  "publisher": {
    "@type": "Organization",
    "name": "ChefBrico",
    "logo": {
      "@type": "ImageObject",
      "url": "https://gourmetpratico.com.br/imagens/logo.png"
    }
  },
